@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Concurso.App.gestion</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: #f8f9fa;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fa-solid fa-cubes"></i> Concurso.App.gestion
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="menuUsuarios" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-user"></i> Usuarios
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="menuUsuarios">
                            <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Index">Gestión de Usuarios</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="menuPedidos" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-box"></i> Pedidos
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="menuPedidos">
                            <li><a class="dropdown-item" asp-controller="Pedido" asp-action="Index">Gestión de Pedidos</a></li>
                            <li><a class="dropdown-item" asp-controller="DetallePedido" asp-action="Index">Detalle de Pedidos</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Producto" asp-action="Index"><i class="fa-solid fa-tag"></i> Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ReportePedidos" asp-action="Index"><i class="fa-solid fa-chart-bar"></i> Reportes</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container" style="padding-top: 80px; min-height: 80vh;">
        @RenderBody()
    </main>
    <footer class="bg-dark text-white text-center py-3 shadow-lg fixed-bottom" style="margin-top:auto;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-md-start">
                    <span class="fw-bold">Concurso.App.gestion</span> &copy; @DateTime.Now.Year
                </div>
                <div class="col-md-6 text-md-end">
                    <span>Desarrollado por MVM | <i class="fa-solid fa-envelope"></i> contacto@mvm.com</span>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
